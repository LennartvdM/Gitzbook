{
  "name": "gitzbook",
  "version": "1.0.0",
  "description": "A custom GitBook-like static site generator for documentation",
  "main": "src/index.js",
  "bin": {
    "gitzbook": "./src/cli.js"
  },
  "scripts": {
    "build": "node src/cli.js build",
    "serve": "node src/cli.js serve",
    "dev": "node src/cli.js serve --watch",
    "app": "vite",
    "app:build": "vite build",
    "app:preview": "vite preview"
  },
  "keywords": [
    "documentation",
    "static-site-generator",
    "markdown",
    "gitbook"
  ],
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.6.0",
    "flexsearch": "^0.8.212",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "html-minifier-terser": "^7.2.0",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.4.0"
  }
}
